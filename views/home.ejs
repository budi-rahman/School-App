<!DOCTYPE html>
<html lang="en">

<head>
	<title>Data Siswa</title>
</head>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<body>
	<div class="container">
				<!-- Content here -->
	
	<h1>Data Student</h1>

	<!-- <%= JSON.stringify(data.teacher) %> -->
	<% var student = JSON.stringify(data.student) %>

    <a href="/student/add"><button class="btn btn-primary" >Add</button></a>
    <br> <br>

	<table border="1" class="table table-hover">
		<thead>
			<tr>
				<th style="text-align:center">Id</th>
				<th style="text-align:center">First Name</th>
				<th style="text-align:center">Last Name</th>
				<th style="text-align:center">Email</th>
				<th style="text-align:center">Gender</th>
				<th style="text-align:center">Birthdate</th>
				<th style="text-align:center">Modify</th>
			</tr>
		</thead>
		<tbody>
            <% for (var i = 0; i< data.student.length; i++) { %>
			<tr>
				<td align="center"><%= data.student[i].id %></td>
				<td align="center"><%= data.student[i].first_name %></td>
				<td align="center"><%= data.student[i].last_name %></td>
				<td align="center"><%= data.student[i].email %></td>
				<td align="center"><%= data.student[i].gender %></td>
				<td align="center"><%= data.student[i].birthdate %></td>
				<td align="center"><a href="/student/edit/<%= data.student[i].id %>"><button type="button" class="btn btn-primary">Edit</button></a> | <a href="/student/delete/<%= data.student[i].id %>"><button type="button" class="btn btn-danger">Delete</button></a></td>
            </tr>
            <% } %>
		</tbody>
	</table>

